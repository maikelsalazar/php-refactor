{
  "name": "maikelsalazar/php-refactor",
  "description": "Collection of PHP refactoring exercises with original and refactored code.",
  "type": "project",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.88"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {     
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox --colors=always tests/",
    "fix": "vendor/bin/php-cs-fixer fix"
  },
  "minimum-stability": "stable",
  "license": "MIT"
}
